.modal-body
  %h3#myModalLabel2.modal-title.text-center
    Forgot your password
  = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html=> { class: 'form-horizontal' }) do |f|
    %fieldset
      .form-group
        .col-sm-6.col-sm-offset-3
          = f.input :email, label: false, :required => true, :input_html => { class: 'form-control', placeholder: "Email" }
      .form-group.text-center
        .col-sm-12
          = f.button :submit, "Submit", class: "btn btn-md btn-primary"
-#= render "devise/shared/links"
