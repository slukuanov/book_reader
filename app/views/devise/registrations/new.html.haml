#registration-form-new{style: ajax_form ? "":"margin: 0 auto;"}
  .center-aligned-form
    = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), data: {rpost: ajax_form}, html: { autocomplete: 'off' }) do |f|
      .title-login
        Sign Up
      .facebook-butt
        = link_to image_tag("buttons/registrate_fb_button-#{I18n.locale}.jpg"), '/users/auth/facebook/', :class => "popup", :"data-width" => 600, :"data-height" => 400
      .gplus-butt
        = link_to 'Google+', '/users/auth/gplus/', :class => "btn btn-error popup", :"data-width" => 600, :"data-height" => 400
      .auth-separator
        .auth-separator-inner
          Or
      = f.error_notification
      .form-inputs.registrate
        = f.input :first_name, :required => true
        = f.input :email, :required => true
        = f.input :password, :required => true
        = f.input :password_confirmation, :required => true
      .border-bottom-dotted{style: "margin-top: 20px;"}
        .form-actions{style: "padding-bottom: 10px; text-align: center;"}
          = f.button :submit, "Submit", class: "btn-lg btn btn-warning text-uppercase"
      .reg-bottom
      .member
        Already a member?
        -if ajax_form
          = link_to 'Sign In', new_session_path(resource_name), :class => "back modal-window-new"
        -else
          = link_to 'Sign In', new_session_path(resource_name), :class => "back"
