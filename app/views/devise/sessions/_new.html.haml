.modal-body
  %h3#myModalLabel.modal-title.text-center
    Login to
    %span.blue-color docnhanh
  = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :format => :js, :html=> { class: 'form-horizontal login-form', :'data-type' => 'json' }) do |f|
    %fieldset
      = f.error_notification
      .form-group
        .col-sm-12
          = f.input :email, label: false, :required => false, :input_html => { class: 'form-control input-md', placeholder: "E-mail" }
      .form-group
        .col-sm-12
          = f.input :password, label: false, :required => false, :input_html => { class: 'form-control input-md', placeholder: "Password" }
      .form-group
        .col-sm-12
          .checkbox
            = f.input :remember_me, label: 'Remember me', id:"checkboxes-0", :input_html => { :checked => true }, :as => :boolean if devise_mapping.rememberable?
      .form-group.text-center
        .col-sm-12
          = f.button :submit, "LOG IN", class: "btn btn-md btn-primary", id: 'singlebutton'
      = link_to 'Forgot your password?', new_password_path(resource_name), class: "remember_link pull-left already"
      = link_to 'Donâ€™t have an account?', new_user_registration_path, class: 'pull-right already', :remote => true, "data-toggle" => "modal", "data-dismiss" => "modal", "data-target" => "#registration-via-email-modal"
