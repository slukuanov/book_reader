:ruby
  model_class = Category
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize

%p= link_to 'New Category', new_admin_category_path, :class => 'btn btn-primary'

%table.table.table-striped
  %thead
    %tr
      %th ID
      %th Title
      %th Actions
  %tbody
    - @categories.each do |category|
      %tr{id: category.id}
        %td= link_to category.id, admin_category_path(category)
        %td= category.title
        %td
          = link_to 'Edit', edit_admin_category_path(category), :class => 'button-edit', :title => 'Edit'
          = link_to 'Delete', admin_category_path(category), :method => :delete, :data => { :confirm =>  'Are you sure?' }, :class => 'button-delete', :title => 'Delete'