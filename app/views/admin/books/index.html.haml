:ruby
  model_class = Book
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize

%p= link_to 'New Book', new_admin_book_path, :class => 'btn btn-primary'
%form{:action => search_admin_books_path, :method => "post", :id => 'search'}
  %fieldset
    %label{:for => 'id_search'}
      Search by title:
    %input{:type => "text", :name => "search_query", :id => 'id_search', :value => @search_query}
  %button{:type => "submit", :class => 'btn'} Search
  %a{:href => admin_books_path, :class => 'btn'} Reset

%table.table.table-striped
  %thead
    %tr
      %th ID
      %th Title
      %th Actions
  %tbody
    - @books.each do |book|
      %tr{id: book.id}
        %td= link_to book.id, admin_book_path(book)
        %td= book.title
        %td
          = link_to 'Edit', edit_admin_book_path(book), :class => 'button-edit', :title => 'Edit'
          = link_to 'Delete', admin_book_path(book), :method => :delete, :data => { :confirm =>  'Are you sure?' }, :class => 'button-delete', :title => 'Delete'